<%- include("../partials/header") %>

<div class="container">
    <h1>Dodawanie komentarza do <%= blog.title %></h1>
    <form action="/blog/<%= blog._id %>/comment" method="POST">
        <div class="form-group">
            <label for="commentAuthor">Przedstaw się :-)</label>
            <input type="text" name="comment[author]" class="form-control" id="commentAuthor">
            <label for="commentContent">Twój komentarz: </label>
            <input type="text" name="comment[text]" class="form-control" id="commentContent">
            <input type="submit" value="Dodaj komentarz" class="btn btn-lg btn-primary btn-blog mt-2">
        </div>
    </form>
</div>

<%- include("../partials/footer") %>